<h1>ブログ一覧</h1>
<p class ="notice"><%= notice %></p>
<table>
  <tr>
    <th class="title">タイトル</th>
    <th class="content">内容</th>
    <th class= "created_at">投稿日時</th>

  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td class= "title"><%= blog.title %></td>
    <td class= "content"><%= blog.content %></td>
    <td class= "created_at"><%= l blog.created_at, format: :short%></td>
    <td><%= link_to '詳細', blog_path(blog.id) %></td>
    <td><%= link_to "編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to '削除する', blog_path(blog.id), method: :delete, data: { confirm: '本当に削除してもいいですか？' }%></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to '新規投稿',new_blog_path %>
